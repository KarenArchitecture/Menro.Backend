@model RestaurantDto
@{
    ViewBag.Title = "افزودن رستوران جدید";
}

<!-- Dark Theme Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background-color: #1e1e2f;
        color: #f0f0f0;
    }
    .form-control, .form-select {
        background-color: #2c2c3e;
        color: #f0f0f0;
        border: 1px solid #555;
    }
    .form-control::placeholder {
        color: #aaa;
    }
    .form-label {
        font-weight: bold;
    }
    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4">افزودن رستوران جدید</h2>

    @using (Html.BeginForm("Create", "Restaurant", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row mb-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "نام رستوران" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.BannerImageUrl, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.BannerImageUrl, new { @class = "form-control", placeholder = "آدرس تصویر بنر (اختیاری)" })
                @Html.ValidationMessageFor(m => m.BannerImageUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Address, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "آدرس رستوران" })
            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.OwnerFullName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.OwnerFullName, new { @class = "form-control", placeholder = "نام کامل صاحب رستوران" })
                @Html.ValidationMessageFor(m => m.OwnerFullName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.NationalCode, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.NationalCode, new { @class = "form-control", placeholder = "کد ملی صاحب رستوران" })
                @Html.ValidationMessageFor(m => m.NationalCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "شماره تماس" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.BankAccountNumber, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.BankAccountNumber, new { @class = "form-control", placeholder = "شماره حساب بانکی" })
                @Html.ValidationMessageFor(m => m.BankAccountNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.ShebaNumber, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.ShebaNumber, new { @class = "form-control", placeholder = "شماره شبا (اختیاری)" })
            @Html.ValidationMessageFor(m => m.ShebaNumber, "", new { @class = "text-danger" })
        </div>

        <div class="mb-4">
            @Html.LabelFor(m => m.RestaurantCategoryId, "دسته‌بندی رستوران", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.RestaurantCategoryId, ViewBag.RestaurantCategories as SelectList, "انتخاب کنید", new { @class = "form-select" })
            @Html.ValidationMessageFor(m => m.RestaurantCategoryId, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-success px-4">افزودن</button>
        <a href="@Url.Action("Index", "Restaurant")" class="btn btn-secondary ms-2">انصراف</a>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
